<%= form_with(model: fafsa_app) do |form| %>
  <% if fafsa_app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fafsa_app.errors.count, "error") %> prohibited this fafsa_app from being saved:</h2>

      <ul>
        <% fafsa_app.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="form-div">
    <div class="field">
      What is the highest education completed by one parent?
        <%form.label :parent_edu %><br/>
        <%= form.select :parent_edu, ["","Middle School/Jr. High", "High School", "College or beyond", "Other/unknown"] ,{}, {:class=> "input" }%>
    </div>
            
            
    <div class="field">
      What is the highet education completed by the other parent?
        <% form.label :parent_edu2 %><br/>
        <%= form.select :parent_edu2, ["","Middle School/Jr. High", "High School", "College or beyond", "Other/unknown"],{}, {:class=> "input" } %>
    </div>
  
    <div class="field">
      Do you have a drivers license?
        <%form.label :drivers_license %>
        <%= form.select :drivers_license, ["",'Yes', 'No'],{}, {:class=> "input" }%>
    </div>


    <div class="field">
      What is your Drivers License number?
        <% form.label :drivers_license_num %><br/>
        <%= form.text_field :drivers_license_num, class:"input" %>
    </div>

    <div class="field">
      Drivers License St
        <% form.label :drivers_license_st %><br/>
        <%= form.text_field :drivers_license_st, class:"input" %>
    </div>


    <div class="field">
        What is your alien registration number?
          <% form.label :alien_num %><br/>
          <%= form.text_field :alien_num, class:"input"%>
    </div>

    <div class="field"> 
        Have you ever been in foster care?
          <%form.label :foster_care %><br/>
          <%= form.select :foster_care, ['', 'Yes', 'No'],{}, {:class=> "input" } %>
    </div>


    <div class="field">
        What high school did you attend?
          <% form.label :high_school_name %><br/>
          <%= form.text_field :high_school_name, {:class=> "input" } %>
    </div> 

    <div class="field">
        In which city is your high school?
          <% form.label :high_school_city %><br/>
          <%= form.text_field :high_school_city , {:class=> "input" } %>
    </div>

    <div class="field">
        In which state is your high school?
          <% form.label :high_school_st %><br/>
          <%= form.select :high_school_st, ['','Alabama', 'Alaska', 'Arizona', 'Arkansas', 'California', 'Colorado', 'Connecticut', 'Delaware', 'District of Columbia', 'Florida', 'Georgia', 'Hawaii',  'Idaho', 'Illinois', 'Indiana','Iowa', 'Kansas', 'Kentucky',  'Louisiana','Maine', 'Maryland', 'Massachusetts', 'Michigan', 'Minnesota', 'Mississippi', 'Missouri','Montana', 'Nebraska', 'Nevada', 'New Hampshire', 'New Jersey', 'New Mexico','New York', 'North Carolina','North Dakota', 'Ohio', 'Oklahoma', 'Oregon', 'Pennsylvania', 'Puerto Rico', 'Rhode Island', 'South Carolina','South Dakota', 'Tennessee','Texas', 'Utah', 'Vermont','Virginia', 'Washington', 'West Virginia', 'Wisconsin', 'Wyoming' ],{}, {:class=> "input" } %>
    </div>

    <div class="field">
        Would you be interested in doing a work study program?
          <% form.label :work_study %><br/>
          <%= form.select :work_study, ['', 'Yes', 'No', 'I dont know'],{}, {:class=> "input" } %>
    </div> 
  
    <div class="field">
        What are you housing plans for your time in college?
          <% form.label :housing_plans%><br/>
          <%= form.select :housing_plans, ['', 'On Campus', 'With Parent','Off Campus'],{}, {:class=> "input" } %>
    </div>

    <div class="field">
        Do you have children who depend 50% or more on you?
          <% form.label :kids %><br/>
          <%= form.select :kids, ['', 'Yes', 'No'],{}, {:class=> "input" } %>
    </div>

    <div class="field">
        What is your martial status?
          <% form.label :married %><br/>
          <%= form.select :married, ['', 'I am single', 'I am married/remarried','I am separated','I am divorced or widowed'] ,{}, {:class=> "input" }%>
    </div>
    <div class="field">
        Do you have any dependents, who are not children, who depende 50% or more on you?
          <%form.label :dep %><br/>
          <%= form.select :dep, ['', 'Yes', 'No'] ,{}, {:class=> "input" }%>
    </div>

</div> 

<div class="actions">
  <%= form.submit "Finish" %>
</div>

<% end %>





